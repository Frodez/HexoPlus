    "@angular/material": "9.2.2",
    "command-exists": "1.2.9",
    "electron-store": "5.1.1",
    "hexo": "4.2.0",
    "hexo-server": "1.0.0",
    "is-plain-object": "3.0.0",
    "js-yaml": "3.13.1",
    "mousetrap": "1.6.5",
